FROM node:18-alpine

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .

ARG FRONTEND_PORT
ARG BACKEND_PORT
ARG BACKEND_HOST
ENV NEXT_PUBLIC_FRONTEND_PORT=${FRONTEND_PORT} \
    NEXT_PUBLIC_BACKEND_PORT=${BACKEND_PORT} \
    NEXT_PUBLIC_BACKEND_HOST=${BACKEND_HOST}

EXPOSE ${FRONTEND_PORT}

CMD ["npm", "run", "dev"]
